// This shows a simple build wrapper example, using the AnsiColor plugin.
pipeline {
    agent {
        node {
    // This displays colors using the 'xterm' ansi color map.
            ansiColor('xterm') 
            }
        }
    stages {
            stage ('my_action'){
                steps {
                // Just some echoes to show the ANSI color.
                        echo "\u001B[31mI'm Red\u001B[0m Now not"
                }
                }
        }
}